[gui]
	fontdiff = -family Inconsolata -size 16 -weight normal -slant roman -underline 0 -overstrike 0
[core]
	editor = vim
	excludesfile = /home/yankel/.gitignore_global
[diff]
	tool = diff
[difftool]
	tool = meld
